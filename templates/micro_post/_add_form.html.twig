<div class='flex items-center justify-center mt-4'>
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

    <div>{{ form_errors(form) }}</div>

    {% if attribute(_context, 'comment') is not defined %}
        <div>
            {{ form_label(form.title, 'Enter the title', {'label_attr': {'class': 'block text-sm text-gray-700 dark:text-gray-400 font-medium'}}) }}
            {{ form_widget(form.title, {'attr': {'class': 'block w-full shadow-sm border-gray-900 rounded-md border dark:border-transparent dark:text-gray-800 p-2 mt-1 mb-2', 'tabindex': '1'}}) }}
            {{ form_errors(form.title) }}
        </div>
    {% endif %}

    <div>
        <p>
            {{ form_label(form.text, attribute(_context, 'comment') is defined ? 'Add your comment' : 'Fill your post', {'label_attr': {'class': 'block text-sm text-gray-700 dark:text-gray-400 font-medium'}}) }}
            {{ form_widget(form.text, {'attr': {'class': 'block w-full shadow-sm border-gray-900 rounded-md border dark:border-transparent dark:text-gray-800 p-2 mt-1 mb-2', 'tabindex': '2'}}) }}
            {{ form_errors(form.text) }}
        </p>
    </div>

    <div class="flex items-center">
        {% if attribute(_context, 'comment') is defined %}
            <a class="text-left bg-red-500 hover:bg-red-700 dark:bg-red-300 dark:hover:bg-red-400 shadow-sm text-white rounded-md font-bold py-2 px-4 mt-1 -mb-2" href="{{ path('micro_post_show', {id: post.id}) }}" tabindex=4>
                Cancel
            </a>
        {% endif %}
        <div class="flex-grow"></div>
        <button type="submit" class="text-left bg-blue-500 hover:bg-blue-700 dark:bg-blue-300 dark:hover:bg-blue-400 shadow-sm text-white rounded-md font-bold py-2 px-4 mt-1 -mb-2" tabindex=3>
            Save
        </button>
    </div>

    {{ form_end(form) }}
</div>
