{% extends 'base.html.twig' %}

{% block bread %}
    ➡️Login
{% endblock %}

{% block body %}
<form action='{{ path('login') }}' method='POST' class="mx-12">
    <div class="mx-auto sm:w-1/2 w-full">
        <div>
            <label class='block text-sm text-gray-700 dark:text-gray-400 font-medium'>Email</label>
            <input type='text' name='_username' value='{{ lastUsername }}' class='block w-full shadow-sm border-gray-900 rounded-md border dark:border-transparent dark:text-gray-800 p-2 mt-1 mb-2'>
        </div>
        <div>
            <label class='block text-sm text-gray-700 dark:text-gray-400 font-medium'>Password</label>
            <input type='password' name='_password' class='block w-full shadow-sm border-gray-900 rounded-md border dark:border-transparent dark:text-gray-800 p-2 mt-1 mb-2'>
        </div>

        <input type='hidden' name='_target_path' value='/micro_post/recents'>

        <div class="text-right">
            <button type="submit" class="bg-blue-700 hover:bg-blue-500 shadow-sm text-white rounded-md font-bold py-2 px-4 mt-1 -mb-2">
                Login
            </button>
        </div>
    </div>
</form>
{% endblock %}