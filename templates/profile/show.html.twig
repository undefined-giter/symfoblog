{% extends 'base.html.twig' %}

{% block title %}{{ user.userProfile.name ?? user.email|split('@')|first|split('.')|first|split('_')|first|capitalize }} Profile{% endblock %}

{% block bread %}
    {{ user.userProfile.name ?? user.email|split('@')|first|split('.')|first|split('_')|first|capitalize }} Profile
{% endblock %}

{% block body %}
   <div class="mx-4 text-lg text-gray-500 dark:text-gray-400 font-normal">{{ user.userProfile.name ?? user.email|split('@')|first|split('.')|first|split('_')|first|capitalize }}</div>

        {% if user.userProfile != null %}
        <div class="mx-4 text-base text-gray-800 dark:text-gray-400 font-normal">
            {{ user.userProfile.bio ?? 'No biography yet.' }}
        </div>

        <div class="flex">
            {% if user.userProfile.location %}
                <div class="mx-4 text-base text-gray-500 dark:text-gray-400 font-normal">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                    </svg> {{ user.userProfile.location }}
                </div>
            {% endif %}
            {% if user.userProfile.dateOfBirth %}
                <div class="mx-4 text-base text-gray-500 dark:text-gray-400 font-normal ml-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M6 3a1 1 0 011-1h.01a1 1 0 010 2H7a1 1 0 01-1-1zm2 3a1 1 0 00-2 0v1a2 2 0 00-2 2v1a2 2 0 00-2 2v.683a3.7 3.7 0 011.055.485 1.704 1.704 0 001.89 0 3.704 3.704 0 014.11 0 1.704 1.704 0 001.89 0 3.704 3.704 0 014.11 0 1.704 1.704 0 001.89 0A3.7 3.7 0 0118 12.683V12a2 2 0 00-2-2V9a2 2 0 00-2-2V6a1 1 0 10-2 0v1h-1V6a1 1 0 10-2 0v1H8V6zm10 8.868a3.704 3.704 0 01-4.055-.036 1.704 1.704 0 00-1.89 0 3.704 3.704 0 01-4.11 0 1.704 1.704 0 00-1.89 0A3.704 3.704 0 012 14.868V17a1 1 0 001 1h14a1 1 0 001-1v-2.132zM9 3a1 1 0 011-1h.01a1 1 0 110 2H10a1 1 0 01-1-1zm3 0a1 1 0 011-1h.01a1 1 0 110 2H13a1 1 0 01-1-1z" clip-rule="evenodd" />
                    </svg>{{ user.userProfile.dateOfBirth | date("M j, Y") }}
                </div>
            {% endif %}
        </div>
        {% endif %}

        <hr class='mx-4'>
        {{ include ('micro_post/_post_list.html.twig', { posts: user.posts }) }}
    <div class="mb-8"></div>
{% endblock %}
